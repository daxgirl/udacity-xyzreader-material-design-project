<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin_list_activity"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/photo_placeholder"
            android:scaleType="centerCrop"
            android:contentDescription="@string/article_main_image_thumbnail"
            />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/title_bottom_padding"
            android:paddingLeft="@dimen/title_top_start_end_padding"
            android:paddingStart="@dimen/title_top_start_end_padding"
            android:paddingRight="@dimen/title_top_start_end_padding"
            android:paddingEnd="@dimen/title_top_start_end_padding"
            android:paddingTop="@dimen/title_top_start_end_padding"
            android:textColor="@color/textPrimaryColor" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/title_top_start_end_padding"
            android:paddingLeft="@dimen/title_top_start_end_padding"
            android:paddingRight="@dimen/title_top_start_end_padding"
            android:singleLine="true"
            android:textColor="#a000" />
    </LinearLayout>

</android.support.v7.widget.CardView>
